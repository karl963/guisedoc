<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="WebApp_ID" version="3.0">

    <display-name>Guisedoc rakendus</display-name>
    
    <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/guisedoc</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
    </resource-ref>
    
    <servlet>
        <servlet-name>guisedoc</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>guisedoc</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>
    
    
	<servlet-mapping>
  		<servlet-name>jsp</servlet-name>
  		<url-pattern>/WEB-INF/jsp/*</url-pattern>
	</servlet-mapping>
 
    <welcome-file-list>
        <welcome-file>/WEB-INF/redirect.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- error -->
	<error-page>
		<error-code>500</error-code>
  		<location>/error</location>
 	</error-page>
 
 	<error-page>
  		<location>/error</location>
 	</error-page>
 	
    <!-- databases -->

    <resource-ref>
		<description>MySQL database main</description>
		<res-ref-name>jdbc/main</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
  	</resource-ref>

  	<resource-ref>
		<description>MySQL database Bestroof</description>
		<res-ref-name>jdbc/bestroof</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
  	</resource-ref>

</web-app>